<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <!--<environmentMode>FAST_ASSERT</environmentMode>-->
  <solutionClass>org.optaplanner.examples.officeseat.domain.OfficeSeat</solutionClass>
  <entityClass>org.optaplanner.examples.officeseat.domain.Employee</entityClass>

  <scoreDirectorFactory>
    <scoreDefinitionType>HARD_SOFT_LONG</scoreDefinitionType>
    <scoreDrl>org/optaplanner/examples/officeseat/solver/officeSeatScoreRules.drl</scoreDrl>
  </scoreDirectorFactory>

  <termination>
    <secondsSpentLimit>60</secondsSpentLimit>
  </termination>

  <constructionHeuristic>
    <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
  </constructionHeuristic>
  <localSearch>
    <unionMoveSelector>
      <changeMoveSelector/>
      <swapMoveSelector/>
      <pillarChangeMoveSelector/>
      <pillarSwapMoveSelector/>
    </unionMoveSelector>
    <acceptor>
      <entityTabuSize>7</entityTabuSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>1000</acceptedCountLimit>
    </forager>
  </localSearch>
</solver>
